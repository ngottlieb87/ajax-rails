<h1>Sign up</h1>
<p><em>Password Requires 7-15 characters including at least 1 upper and lower case letter, and 1 digit</em></p>
<%= form_for :user, url: '/users' do |f| %>

  Name: <%= f.text_field :name %>
  Email: <%= f.text_field :email %>
  Password: <%= f.password_field :password %>
  Password Confirmation: <%= f.password_field :password_confirmation %>
  <span class="waves-effect waves-light btn"><%= f.submit "Sign up" %></span>
<% end %>
